<h1 style="text-align:center">Página Inicial da Postagens</h1>
<p style="text-align:center">Aqui é onde tu vai ler as besteiras, seu bosta</p>
<% if flash[:notice] %>
  <p style="text-align:center">------------------------------------------------------</p>
  <p style="text-align:center"><b><%= flash[:notice] %></b></p>
<% end %>

<p style="text-align:center">------------------------------------------------------</p>

<p style="text-align:center">Navegação</p>
<p style="text-align:center"><%= link_to 'Página Inicial', root_path %> | <%= link_to 'Novo Post', new_post_path %></p>

<p style="text-align:center">------------------------------------------------------</p>

<% @posts.each do |post|%>
  <div style="text-align:center">
    <h1><%= post.title %></h1>
    <p><%= post.content %></p>
    
    <h3>Comentário(s)</h3>
    <p style="font-size:12px"><%= link_to 'Comentar'%></p>
      <% post.comments.each do |comment| %>
        <% @count = 1 %>
        <p><%= @count %>. <%= comment.content %></p>
        <% @count += 1%>
      <% end %>
    <p>Edição</p>
    <p><%= link_to 'Editar', edit_post_path(post.id)%> | <%= link_to 'Apagar', post_path(post.id), method: :delete, data: {confirm: 'Tem certeza que deseja apagar a postagem?'}%></p>
  <p>------------------------------------------------------</p>
  </div>
<% end %>



