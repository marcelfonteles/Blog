<div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <% @posts.each do |post| %>
          <div class="post-preview">
            <%= link_to post_path(post.id) do %>
              <h2 class="post-title">
                <%= post.title %>
              </h2>
              <h3 class="post-subtitle">
                Exemplo de subt√≠tulo. Inserir posteriormente
              </h3>
            <% end %>
