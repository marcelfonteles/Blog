<header class="masthead" style="background-image: url('/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= @post.title %></h1>
            
          </div>
        </div>
      </div>
    </div>
  </header>
  <article>
    <div class="container">
      <div class="row">
        <div class="text-justify col-lg-8 col-md-10 mx-auto">
            <p class=""><%= @post.content.html_safe %></p>
        </div>
      </div>
    </div>
  </article>
  <hr>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <button id="botao" class="btn btn-primary">Carregar Comentários</button>
      </div>
    </div>
  </div>
  <hr>
  <div class="container">
    <div class="row">
      <div id="comments" class="col-lg-8 col-md-10 mx-auto">
       
      </div>
    </div>
  </div>
   <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
        <p class="text-center font-weight-bold"> Novo Comentário</p>
        <p>
          <%= form_for @comment, url: create_comment_path(@comment.post_id) do |f| %>
            <div style="display:none"><%= f.text_field :post_id %></div>
            <p>
              <%= f.text_area :content, id:'comentario-conteudo', size:'80x5', class:'form-control'  %>
            </p>
            <p><%= f.submit 'Comentar', class:'btn btn-primary', id:'commentar-botao' %></p>
            
          <% end %>
        </p>
        </div>
      </div>
<div id="post-id" class="d-none"><%= @post.id %></div>
<!--Scripts-->
