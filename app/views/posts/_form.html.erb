<%= form_for @post do |f| %>
    <p>
        <%= f.label :title, 'Título' %><br>
        <%= f.text_field :title %>
    </p>
    
    <p>
        <%= f.label :content, 'Conteúdo'%><br>
        <%= f.text_area :content, size: '150x10'%>
    </p>
    <p>
        <%= f.submit 'Enviar'%>
    </p>
<% end %>