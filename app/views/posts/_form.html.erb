<% if flash[:notice] %>
    <p>---------------------------------------------------------------</p>
    <p><%= flash[:notice] %></p>
    <% if @post.errors.any? %>
        <ul>
            <%@post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
        <p>---------------------------------------------------------------</p>
    <% end %>
<% end %>
<%= form_for @post do |f| %>
    <p>
        <%= f.label :title, 'Título' %><br>
        <%= f.text_field :title, class:'form-control' %>
    </p>
    
    <p>
        <%= f.label :content, 'Conteúdo'%><br>
        <%= f.cktext_area :content, class:'form-control'%>
    </p>
    <p>
        <%= f.submit 'Publicar', class:'btn btn-primary rounded btn-block'%>
    </p>
<% end %>